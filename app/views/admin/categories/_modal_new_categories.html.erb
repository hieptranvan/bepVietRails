<div class="modal fade in" id="category-new-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" >
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_tag admin_categories_path, method: :post, id: "form-new-category" do %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
            <i class="material-icons">clear</i>
          </button>
          <h4 class="modal-title"><%= t ".title" %></h4>
        </div>
        <div class="modal-body">
          <div class="form-group label-floating is-empty">
            <label class="control-label"><%= t ".parent_name" %></label>
          </div>
          <div class="form-group label-floating is-empty">
            <label class="control-label" id="category-parent-name"></label>
            <input type="text" class="form-control" name="parent_name" disabled="disabled" readonly="readonly">
          </div>
          <div class="form-group label-floating is-empty">
            <input type="hidden" name="parent_id" id="category-parent-id">
            <label class="control-label"><%= t :name %></label>
            <input type="text" class="form-control" name="name" id="category-edit-name" placeholder="" required="required">
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary btn-simple"><%= t :create %></button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
