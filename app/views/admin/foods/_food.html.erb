<tr>
  <td><%= food.id %></td>
  <td><%= image_tag food.image, class: "image" %></div></td>
  <td><%= food.name %></td>
  <td><%= food.calorie %></td>
  <td><%= food.cooking_method %></td>
  <td>
    <button type="button" rel="tooltip" title="" class="btn btn-primary btn-simple btn-xs" data-original-title="Edit"
      onclick="call_form_edit('<%= edit_admin_food_path food %>')">
      <i class="material-icons">edit</i>
      <div class="ripple-container"></div></button>
      <button type="button" rel="tooltip" title="" class="btn btn-danger btn-simple btn-xs" data-original-title="Delete">
        <%= link_to [:admin, food], method: :delete, class: "data-confirm", confirmcontent: t("confirm_delete") do %>
          <i class="material-icons">close</i>
        <% end %>
    </button>
  </td>
</tr>
