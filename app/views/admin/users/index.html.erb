<% provide :title, t(".title") %>
<% provide :search_url, admin_users_path %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="card">
        <div class="card-header" data-background-color="purple">
          <h4 class="title"><%= t ".ingredient" %></h4>
          <p class="category"><%= t ".title" %></p>
        </div>
        <div class="col-md-12">
          <button class="btn btn-primary btn-round btn-just-icon pull-right" data-toggle="modal" data-target="#modal-add-ingredient">
            <i class="material-icons">add</i>
          </button>
        </div>
        <div class="card-content table-responsive">
          <table class="table table-hover">
            <thead class="text-warning">
              <th>ID</th>
              <th>Avatar</th>
              <th>Name</th>
              <th>email</th>
              <th></th>
            </thead>
            <tbody>
              <%= render @users %>
            </tbody>
          </table>
        </div>
        <div class="">
          <%= paginate @users %>
        </div>
      </div>
    </div>
    <div>
      <div class="card">
      </div>
    </div>
  </div>
</div>
