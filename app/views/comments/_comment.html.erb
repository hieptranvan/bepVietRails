<div class="user-comment">
  <div class="comment-user"><%= image_tag comment.user.avatar, class: "comment-user-avatar" %>
  </div>
  <div class="comment-content">
    <%= link_to comment.user.name, comment.user %>
    <%= comment.content %>
    </br>
    <small>
    <%= t :ago, time: time_ago_in_words(comment.created_at) %>
    </small>
    </br>
    <% if current_user == comment.user %>
      <%= link_to t(:delete), comment, method: :delete, class: "data-confirm", confirmcontent: t(:confirm_delete),
        remote: true %>
      <% end %>
  </div>
</div>
