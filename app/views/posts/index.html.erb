<% provide :main_class, "index-page" %>
<%= render "layouts/header" %>
<div class="main main-raised">
  <div class="profile-content fixed_body fix">
    <div class="row">
      <div class=" container-custom">
        <div class="row">
          <div class="col-md-2 col-xs-12">
            <div class="headline">
            <h3><%= t :categories %></h3>
            </div>
            <div class="card-custom">
              <div class="card-content">
                <% @categories.each do |category| %>
                  <div class="panel">
                    <div class="panel-body">
                      <h4 class="panel-title">
                        <%= link_to category.name.truncate(20), posts_path(category_id: category.id) %>
                        <a data-toggle="collapse" href="#collapse<%= category.id %>" class="pull-right">
                          <i class="material-icons">keyboard_arrow_down</i>
                        </a>
                      </h4>
                    </div>
                    <div id="collapse<%= category.id %>" class="panel-collapse collapse">
                      <% category.instance_children.each do |c| %>
                        <div class="panel-footer panel-custom">
                          <%= link_to c.name.truncate(20), posts_path(category_id: c.id) %>
                        </div>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
          <div class="col-md-10 col-xs-12">
            <div class="headline">
              <h3><%= t :tips %></h3>
            </div>
            <div class="row">
              <%= render @posts %>
            </div>
            <div class="row">
              <div class="paginate">
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
