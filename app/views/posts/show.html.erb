<% provide :main_class, "profile-page" %>
<%= render "layouts/navbar" %>
<div class="wrapper">
  <div class="header header-filter food_detail"></div>
  <div class="main main-raised">
    <div class="profile-content">
      <div class="container">
        <div class="row">
        <div class="profile">
          <div class="avatar">
          </div>
          <div class="name">
            <h3 class="title"><%= @post.title %></h3>
          </div>
        </div>
      </div>
      <div class="description">
        <%= @post.content.html_safe %>
        <div class="comments">
          <div class="headline">
          <h3>Comments</h3>
          </div>
          <div class="form-group label-floating is-empty">
            <%= form_for @comment, remote: true do |f| %>
              <%= f.hidden_field :target_id, value: @post.id %>
              <%= f.hidden_field :target_type, value: Post.name %>
              <label class="control-label"> Add your comment...</label>
              <%= f.text_area :content, class: "form-control" ,rows: "4" %>
              <span class="material-input"></span>
              <%= f.submit "Comment", class: "btn btn-primary pull-right" %>
            <% end %>
          </div>
          <div class="list-comments">
            <%= render partial: "comments/comment", collection: @post.comments,
              as: :comment %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
