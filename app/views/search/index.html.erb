<% provide :main_class, "index-page" %>
<%= render "layouts/header" %>
<div class="main main-raised">
  <div class="profile-content fixed_body fix">
    <div class="container">
      <div class="headline">
        <h3><%= t ".search" %></h3>
      </div>
      <div class="row">
        <div class="col-md-4"></div>
          <div class="col-md-6">
            <%= form_tag search_index_path, method: :get %>
            <div class="row inline">
              <div class="checkbox"></div>
              <div class="checkbox">
                <label>
                  <%= check_box_tag "type[2]", Food.name %>
                  <%= t ".food" %>
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <%= check_box_tag "type[3]", Post.name %>
                  <%= t ".post" %>
                </label>
              </div>
              <div class="checkbox">
                <label>
                  <%= check_box_tag "type[4]", Ingredient.name %>
                  <%= t ".ingredient" %>
                </label>
              </div>
            </div>
            <div class="form-group is-empty inline">
              <%= text_field_tag "keyword", nil , placeholder: "Search", class: "form-control", size: "40" %>
              <span class="material-input"></span>
              <span class="material-input"></span></div>
              <button class="btn btn-white btn-round btn-just-icon" data-original-title="" title="">
              <i class="material-icons">search</i><div class="ripple-container"></div>
            </button>
          </div>
          <div class="col-md-4"></div>
        </div>
        <div class="row">
          <div class="headline">
            <h3><%= t ".result" %></h3>
          </div>
          <% if @foods&.any? %>
            <div class="row">
              <div class="headline">
                <h3><%= t ".food" %></h3>
              </div>
              <%= render partial: "foods/food", collection: @foods,
                as: :food %>
            </div>
          <% elsif @ingredients&.any? %>
            <div class="row">
              <div class="headline">
                <h3><%= t ".ingredient" %></h3>
              </div>

            </div>
          <% elsif @posts&.any? %>
            <div class="row">
              <div class="headline">
                <h3><%= t ".post" %></h3>
              </div>
              <%= render partial: "static_pages/tip_item", collection: @posts,
                as: :tip %>
            </div>
          <% end %>
          <div class="end-page"></div>
        </div>
      </div>
    </div>
  </div>
</div>
