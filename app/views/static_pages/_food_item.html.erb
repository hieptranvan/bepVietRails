<div class="food-item col-md-3 co-xs-10">
  <%= image_tag food.image, class: "item-image" %>
  <div class="food-element-detail">
  </div>
  <div class="food-item-detail">
    <%= link_to food.name, food %>
    <div class="rating">
      <% n = food.average()&.avg || 0 %>
      <% for i in 1..n %>
        <img src="/assets/star-on.png">
      <% end %>
      <% for i in 1..5-n %>
        <img src="/assets/star-off.png">
      <% end %>
    </div>
  </div>
</div>
